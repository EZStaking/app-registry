{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "EZ Staking App Registry",
  "description": "EZ Staking App Registry",
  "type": "object",
  "required": [
    "chainName",
    "rpcUrl",
    "restUrl",
    "chainId",
    "denom",
    "denomUpper",
    "sdenom",
    "coinType",
    "gasPriceStep",
    "coinDecimals",
    "features",
    "coinGeckoId",
    "gasPrice",
    "chainInfo",
    "colors",
    "links",
    "isExplorerEnabled",
    "isModuleEnabled"
  ],
  "properties": {
    "chainName": {
      "type": "string"
    },
    "rpcUrl": {
      "$ref": "#/$defs/url"
    },
    "restUrl": {
      "$ref": "#/$defs/url"
    },
    "chainId": {
      "type": "string"
    },
    "bech32": {
      "type": "string"
    },
    "denom": {
      "type": "string"
    },
    "denomUpper": {
      "type": "string"
    },
    "sdenom": {
      "type": "string"
    },
    "coinType": {
      "type": "number"
    },
    "gasPriceStep": {
      "type": "object"
    },
    "coinDecimals": {
      "type": "number"
    },
    "features": {
      "type": "array"
    },
    "explorerUrlToTx": {
      "$ref": "#/$defs/url"
    },
    "coinGeckoId": {
      "type": "string"
    },
    "gasPrice": {
      "type": "string"
    },
    "chainInfo": {
      "$ref": "#/$defs/chainInfo"
    },
    "colors": {
      "$ref": "#/$defs/colors"
    },
    "links": {
      "$ref": "#/$defs/links"
    },
    "isExplorerEnabled": {
      "type": "boolean"
    },
    "isModuleEnabled": {
      "$ref": "#/$defs/isModuleEnabled"
    },
    "isAProviderChain": {
      "type": "boolean"
    },
    "isAConsumerChain": {
      "type": "boolean"
    },
    "providerChain": {
      "type": "string"
    }
  },
  "$defs": {
    "url": {
      "type": "string",
      "pattern": "^(https?|wss?|ipfs)://"
    },
    "chainInfo": {
      "type": "object",
      "required": ["cosmosSdkVersion", "ibcGoVersion"],
      "properties": {
        "cosmosSdkVersion": {
          "type": "string"
        },
        "ibcGoVersion": {
          "type": "string"
        }
      }
    },
    "colors": {
      "type": "object",
      "required": [
        "headerGradient",
        "primary",
        "secondary",
        "tertiary",
        "light"
      ],
      "properties": {
        "headerGradient": {
          "type": "string"
        },
        "primary": {
          "type": "string"
        },
        "secondary": {
          "type": "string"
        },
        "tertiary": {
          "type": "string"
        },
        "light": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "image": {
      "type": "object",
      "oneOf" : [
        {
          "type" : "object",
          "properties": {
            "url": {
              "$ref": "#/$defs/url"
            }
          },
          "additionalProperties": false
        },
        {
          "type" : "object",
          "properties": {
            "svg": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type" : "object",
          "properties": {
            "svgImg": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type" : "object",
          "properties": {
            "font": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "link": {
      "type": "object",
      "required": ["url", "title", "icon"],
      "properties": {
        "url": {
          "$ref": "#/$defs/url"
        },
        "title": {
          "type": "string"
        },
        "icon": {
          "$ref": "#/$defs/image"
        }
      },
      "additionalProperties": false
    },
    "childLinks": {
      "type": "object",
      "required": ["title", "icon", "childs"],
      "properties": {
        "title": {
          "type": "string"
        },
        "icon": {
          "type": "object",
          "$ref": "#/$defs/image"
        },
        "childs": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/link"
          },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "links": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/$defs/link"
          },
          {
            "$ref": "#/$defs/childLinks"
          }
        ]
      },
      "minItems": 4,
      "maxItems": 4,
      "uniqueItems": true
    },
    "isModuleEnabled": {
      "type": "object",
      "required": ["governance"],
      "properties": {
        "governance": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}
